<%include ../shared/header2%>
<div class="container  eric-container-all" style="text-align: center;">
    <div class=" eric-contanct-body animated fadeInRight">
        <h1 class="eric-h1-reg">Car Inventory</h1>
        <%if(user){%>
        <a class="btn eric-normal-btn" href="/cars/add">Add a new Car</a>
        <%}%>
     <table class="table table-striped table-hover">
       <tr>
         <th>Make</th>
            <th>Model</th>
              <th>Year</th>
             <%if (user){%>
              <th>Actions</th>
             <%}%>
       </tr>
          <%for(let i=0; i< cars.length;i++){%>
            <tr>
              <td><%= cars[i].make%></td>
               <td><%=cars[i].model%></td>
                 <td><%=cars[i].year%></td>

                  <%if (user){%>
                    <td>
                    <a class="btn eric-info-btn" href="/cars/edit/<%= cars[i]._id %>">EDIT</a>
                    <a class="btn eric-dg-btn" href="/cars/delete/<%= cars[i]._id%>"
                     onclick="return confirm('Are you sure you want to delete this? ')">DELETE</a>
                    </td>
                  <%}%>
            </tr>
          <%}%>
     </table>
    </div>
</div>
<%include ../shared/footer%>